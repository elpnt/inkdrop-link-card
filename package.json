{
  "name": "link-card",
  "main": "./lib/index",
  "version": "0.4.1",
  "description": "Expand links as cards",
  "repository": "https://github.com/elpnt/inkdrop-link-card",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "swc src/ -d lib/",
    "watch": "swc -w src/ -d lib/",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --format codeframe 'src/**'",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{less,yml,json}'",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write --ignore-path .gitignore '**/*.{less,yml,json}'"
  },
  "engines": {
    "inkdrop": "^5.x"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.108",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "chokidar": "^3.5.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "open-graph-scraper": "^4.11.0"
  }
}
